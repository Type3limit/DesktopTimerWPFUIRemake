<UserControl
    x:Class="DesktopTimer.Views.Controls.AudioWaveControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopTimer.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RootControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Canvas
        x:Name="AudioVisualizerDrawArea"
        Width="{Binding ElementName=RootControl, Path=ActualWidth}"
        Height="{Binding ElementName=RootControl, Path=ActualHeight}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        IsHitTestVisible="False" />
</UserControl>
